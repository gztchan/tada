{
  "name": "tada",
  "private": true,
  "main": "dist/electron/main.js",
  "version": "0.1.2",
  "type": "module",
  "description": "An Electron application with React and TypeScript",
  "scripts": {
    "dev": "PORT=3524 pnpm run dev:react & pnpm run dev:electron",
    "dev:react": "vite",
    "dev:electron": "pnpm run transpile:electron && PORT=3524 NODE_ENV=development electron .",
    "build": "vite build",
    "rebuild": "electron-rebuild",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:pkg": "turbo run dev --filter=@tada/*",
    "transpile:electron": "tsc --project tada/src/electron/tsconfig.json",
    "clean": "rm -rf dist",
    "package": "pnpm run clean && pnpm run build && pnpm run transpile:electron && DEBUG=forge electron-forge package && DEBUG=forge electron-forge make"
  },
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-dmg": "^7.6.1",
    "@electron-forge/maker-zip": "^7.6.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.1",
    "@eslint/js": "^9.38.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/better-sqlite3": "^7.6.13",
    "@types/os-utils": "^0.0.4",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "electron": "^39.0.0",
    "turbo": "^2.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@hugeicons/core-free-icons": "^1.2.1",
    "@hugeicons/react": "^1.1.1",
    "@phosphor-icons/react": "^2.1.10",
    "@tada/api": "workspace:*",
    "@tada/database": "workspace:*",
    "@tada/editor": "workspace:*",
    "@tada/ui": "workspace:*",
    "@tailwindcss/vite": "^4.1.16",
    "electron-log": "^5.4.3",
    "eventemitter3": "^5.0.1",
    "lucide": "^0.548.0",
    "lucide-react": "^0.548.0",
    "normalize.css": "^8.0.1",
    "os-utils": "^0.0.14",
    "prisma": "^7.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.10.1",
    "tailwindcss": "^4.1.18",
    "ts-mixer": "^6.0.4",
    "tw-animate-css": "^1.4.0",
    "uuid": "^13.0.0",
    "valtio": "^2.2.0",
    "zod": "^4.1.13"
  }
}
